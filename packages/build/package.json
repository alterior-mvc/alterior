{
  "name": "@alterior/build",
  "version": "3.13.3",
  "description": "A build tool for mono repos",
  "keywords": [
    "build"
  ],
  "homepage": "https://github.com/alterior-mvc/alterior#readme",
  "bugs": {
    "url": "https://github.com/alterior-mvc/alterior/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alterior-mvc/alterior.git"
  },
  "dependencies": {
    "@alterior/command-line": "^3.13.3",
    "@alterior/functions": "^3.11.1",
    "@alterior/terminal": "^3.13.3",
    "mkdirp": "^3.0.1",
    "rxjs": "^6.6.7",
    "semver": "^7.7.2",
    "simple-git": "^3.30.0"
  },
  "bin": {
    "alt-build": "./dist/main.js"
  },
  "private": true,
  "license": "MIT",
  "author": "The Alterior Project (https://github.com/alterior-mvc)",
  "type": "commonjs",
  "main": "dist/index.js",
  "module": "dist.esm/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
