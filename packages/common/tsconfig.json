{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "rootDir": "./src",
        "baseUrl": "./src",
        "outDir": "./dist"
    },
    "include": [ "./src/**/*.ts" ],
    "typedocOptions": {
		"out": "../../docs/common",
		"excludeExternals": true,
		"excludePrivate": true,
		"externalPattern": "**/node_modules/**",
		"exclude": "**/node_modules/**,**/dist*/**,**/example/**,**/*.test.ts",
		"categoryOrder": [
		  "Entrypoint",
		  "*"
		]
	}
}