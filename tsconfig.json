{
	"compilerOptions": {
		"experimentalDecorators": true,
		"target": "ES2016",
		"strict": true,
		"sourceMap": true,
		"declarationMap": true,
		"outDir": "./dist",
		"module": "commonjs",
		"moduleResolution": "node",
        "stripInternal": true,
		"preserveSymlinks": true,
        "importHelpers": true,
        "esModuleInterop": true,
		"lib": [
			"es2023",
			"dom"
		],
		"declaration": true,
		"emitDecoratorMetadata": true,
		"downlevelIteration": true
	},
	"exclude": [
		"node_modules",
		"dist"
	],
	"typedocOptions": {
		"excludeExternals": true,
		"excludePrivate": true,
		"customCss": "../../docs/theme.css",
		"externalPattern": "**/node_modules/**",
		"exclude": "**/node_modules/**,**/dist*/**,**/example/**,**/*.test.ts",
		"categoryOrder": [
		  "Entrypoint",
		  "*"
		]
	}
}